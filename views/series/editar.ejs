<% include ../partials/header %>

     <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
              <form method="post">
                 <h2>Editar série</h2>
                    <div class="form-group">
                        <label for="name">Nome da série</label>
                        <input value="<%= serie.name %>" name="name" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Informe o nome da série">
                      <small id="nameHelp" class="form-text text-muted">Nome da série a ser salva.</small>
                    </div>

                    <div class="form-group">
                            <label for="status">Situação da série</label>
                            <select class="form-control" id="status" name="status">
                                <% labels.forEach( label => { %>
                                    
                                    <option value="<%= label.id %>" <% if(label.id === serie.status) { %> selected="selected" <% } %>><%= label.name %></option>
                               <% }) %>
                             </select>
                          </div>

            <button class="btn btn-primary">Salvar</button>
          </div>
        </div>
      </div>
    </section>

    <% include ../partials/footer %>